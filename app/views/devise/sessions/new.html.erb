<style>
  #button-panel {
    display: none;
  }
  
  #main-logo {
    width: 140px;
    height: 102px;
  }

  .textbox label {
    width: 150px;
    text-align: left;
  }

  .field {
    margin: 20px 0;
  }

  .actions {
    font-style: oblique;
  }

  footer {
    color: white;
  }

  footer a {
    color: white;
    text-decoration: underline;
  }

</style>

<%= link_to image_tag("crown-logo.png", id: "main-logo"), root_path %>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field textbox">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field textbox">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %><br/>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "other btn beige" %>
  </div>
<% end %>

<br/>
<hr / style="width: 80%">

<footer>
  <%= link_to "Sign up", new_registration_path(resource_name) %> &nbsp; | &nbsp; <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</footer>
